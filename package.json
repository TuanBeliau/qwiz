{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "dev:frontend": "npm run dev",
        "dev:backend": "php artisan serve --host 0.0.0.0 --port=8000",
        "start-dev": "composer update && composer install && npm install && prettier --write . && concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "format:php": "prettier --write 'app/**/*.php' 'routes/**/*.php' 'database/**/*.php'"
    },
